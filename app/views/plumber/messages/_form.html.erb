<%= simple_form_for [campaign, message] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :subject %>
  <%= f.input :delay %>
  <%= f.input :active %>
  <%= f.input :body, input_html: { rows: 13 } %>
  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to 'Back', campaign || message, class: "btn btn-link" %>
<% end %>
